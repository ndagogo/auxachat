<h1 class="ui center aligned medium icon header">
    Welcome To AUXACHAT -A complete chatapp
    <i class="circular orange power off icon"></i>
    Sign Up And Join Us
</h1>
<% if @user.errors.any? %>
  <h1>The following errors occured:</h1>
    <ul>
       <% @user.errors.full_messages.each do |msg| %> 
        <li> <%= msg %></li>
    </ul>
    <% end %>
<% end %>  
<!--This is the signup page form-->
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
      <%= form_with(model:@user,  data:{turbo: false}, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
        <div class="field">
          <%=f.label :username, 'Username' %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter a Username" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%=f.label :email, 'E-mail' %>
          <div class="ui left icon input">
            <%= f.email_field :email, placeholder: "Enter your email" %>
            <i class="mail icon"></i>
          </div>
        </div>



        <div class="field">
          <%=f.label :phone, 'Phone' %>
          <div class="ui left icon input">
            <%= f.text_field :phone, placeholder: "Enter your phone 11 digits number" %>
            <i class="phone icon"></i>
          </div>
        </div>


        
        <div class="field">
          <%=f.label :password, 'Password' %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter a password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%#= f.button "Login", class:"ui orange submit button" %>
        <%= f.submit "Signup", class: "ui orange submit button" %>
  
      </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <%= link_to 'Login', login_path, class: "ui orange submit button" %>
        
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
