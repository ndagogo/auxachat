<h1 class="ui center aligned medium icon header">
    Welcome To XANO chatapp
    <i class="circular orange power off icon"></i>
    Login To Continue
</h1>

<!--This is the login page form-->
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
      <%= form_for(:session,  data:{turbo: false}, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%=f.label :username, 'Username' %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%=f.label :password, 'Password' %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter your password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%#= f.button "Login", class:"ui orange submit button" %>
        <%= f.submit "Login", class: "ui orange submit button" %>
  
      </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <%= link_to 'Signup', signup_path, class: "ui orange submit button" %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
